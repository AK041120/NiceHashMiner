    <Grid DataContext="{Binding .}" x:Name="deviceActionsGrid">
        <Border Background="{DynamicResource BackgroundColor}" BorderBrush="{DynamicResource BorderColor}" BorderThickness="1" CornerRadius="4" />
        <ContentControl Content="{Binding }">
            <ContentControl.Style>
                <Style TargetType="{x:Type ContentControl}">
                    <Setter Property="ContentTemplate" Value="{StaticResource MenuIdle}"/>
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding CanStopMining}" Value="True">
                            <Setter Property="ContentTemplate" Value="{StaticResource MenuMining}"></Setter>
                        </DataTrigger>
                        <DataTrigger Binding="{Binding CanStopBenchmark}" Value="True">
                            <Setter Property="ContentTemplate" Value="{StaticResource MenuBenchmarking}"></Setter>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </ContentControl.Style>
        </ContentControl>
    </Grid>
</UserControl>
